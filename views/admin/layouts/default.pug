doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle} - Music App Admin
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.min.css")
    link(rel="stylesheet", href="/admin/css/style.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap", rel="stylesheet")
  body
    // Toast Notifications
    - if (messages.success)
      div.toast-container.position-fixed.top-0.end-0.p-3
        div.toast.show(role="alert", aria-live="assertive", aria-atomic="true")
          div.toast-header.bg-success.text-white
            i.fas.fa-check-circle.me-2
            strong.me-auto Success
            button.btn-close.btn-close-white(type="button", data-bs-dismiss="toast")
          div.toast-body #{messages.success}
    - if (messages.error)
      div.toast-container.position-fixed.top-0.end-0.p-3
        div.toast.show(role="alert", aria-live="assertive", aria-atomic="true")
          div.toast-header.bg-danger.text-white
            i.fas.fa-exclamation-circle.me-2
            strong.me-auto Error
            button.btn-close.btn-close-white(type="button", data-bs-dismiss="toast")
          div.toast-body #{messages.error}
    
    // Main Layout
    .admin-layout
      include ../partials/header.pug
      .admin-body
        include ../partials/sider.pug
        .admin-main
          block main
    
    // Scripts
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.min.js")
    script(src="https://cdn.jsdelivr.net/npm/apexcharts@3.44.0/dist/apexcharts.min.js")
    script(src="/tinymce/tinymce.min.js")
    script(src="/admin/js/tinymce-config.js")
    script(src="/admin/js/main.js")
